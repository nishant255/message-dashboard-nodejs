<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Message Dashboard</title>
    </head>
    <body>
        <h1>The Dojo Message Board</h1>
        <hr>
        <form action="/post_message" method="post">
            <label>Name: </label>
            <input type="text" name="name"><br>
            <label>Message: </label><br>
            <textarea name="message" rows="8" cols="80"></textarea><br>
            <input type="submit" name="" value="Post message">
        </form>
        <% for (var i in post_list) {%>

            <h3>Name: <%= post_list[i].name%></h3>
            <h3>Message: <%= post_list[i].text%></h3>
            <% for (var j=0; j < post_list[i].comments.length; j++) { %>
                <h5>Name: <%= post_list[i].comments[j].name %></h5>
                <h5>Comment: <%= post_list[i].comments[j].text %></h5>
                <hr>
            <% } %>
            <form action="/post_comment/<%= post_list[i]._id%>" method="post">
                <label>Name: </label>
                <input type="text" name="name"><br>
                <label>Comment: </label><br>
                <textarea name="comment" rows="4" cols="40"></textarea><br>
                <input type="submit" name="" value="Post comment">
            </form>
            <hr>
        <% } %>
    </body>
</html>
